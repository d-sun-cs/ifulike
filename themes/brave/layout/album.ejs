<div id="Pjax">
    <div class="container">
        <h5 class="list-text fade-in-up">📷记录我们的美好瞬间</h5>
        <div class="card mb-4">
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-5">
                        <% theme.album_collections.forEach(function(collection, index){ %>
                            <% if (index % 2===0) { %>
                                <div class="album-collection mb-4 shadow-sm p-3 bg-transparent rounded fade-in-up">
                                    <h5 class="card-title">
                                        <%= collection.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= new Date(collection.date).toISOString().split('T')[0] %>
                                    </p>
                                    <div class="row">
                                        <% collection.photos.slice(0, 9).forEach(function(photo){ %>
                                            <div class="col-4 p-1">
                                                <div class="img-container">
                                                    <img src="<%= photo.img %>" class="img-fluid"
                                                        alt="<%= photo.desc %>">
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-right">
                                            <a href="/album-collection/<%= index %>"
                                                class="btn btn-primary btn-circle">></a>
                                        </div>
                                    </div>
                                </div>
                                <hr class="dotted fade-in-up">
                                <% } %>
                                    <% }) %>
                    </div>
                    <div class="col-md-5 ml-md-4">
                        <% theme.album_collections.forEach(function(collection, index){ %>
                            <% if (index % 2 !==0) { %>
                                <div class="album-collection mb-4 shadow-sm p-3 bg-transparent rounded fade-in-up">
                                    <h5 class="card-title">
                                        <%= collection.title %>
                                    </h5>
                                    <p class="card-text">
                                        <%= new Date(collection.date).toISOString().split('T')[0] %>
                                    </p>
                                    <div class="row">
                                        <% collection.photos.slice(0, 9).forEach(function(photo){ %>
                                            <div class="col-4 p-1">
                                                <div class="img-container">
                                                    <img src="<%= photo.img %>" class="img-fluid"
                                                        alt="<%= photo.desc %>">
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 text-right">
                                            <a href="/album-collection/<%= index %>"
                                                class="btn btn-primary btn-circle">></a>
                                        </div>
                                    </div>
                                </div>
                                <hr class="dotted fade-in-up">
                                <% } %>
                                    <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fade-in-up {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s, transform 0.5s;
    }

    .fade-in-up.show {
        opacity: 1;
        transform: translateY(0);
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        border: none;
    }

    .card-body {
        padding: 20px;
    }

    .img-container {
        width: 100%;
        padding-top: 100%;
        position: relative;
    }

    .img-container img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 25px;
        /* 调整边角更圆 */
    }

    .dotted {
        border-top: 2px dotted #bbb;
        /* 调整虚线更粗 */
    }

    .album-collection {
        margin-bottom: 20px;
        background-color: transparent;
        /* 透明背景 */
    }

    .btn-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        padding: 0;
        margin-top: 10px;
        /* 确保按钮不与虚线重叠 */
        float: right;
        /* 靠右 */
        position: absolute;
        /* 确保按钮在小卡片范围内 */
        right: 10px;
        /* 调整按钮位置 */
        bottom: 10px;
        /* 调整按钮位置 */
    }
</style>

<script>
    $(document).ready(function () {
        $('.fade-in-up').each(function (i) {
            var $item = $(this);

            $item.addClass('show');

        });
    });

    $(document).on('pjax:end', function () {
        $('.fade-in-up').each(function (i) {
            var $item = $(this);

            $item.addClass('show');

        });
    });
</script>