        <script>
            window.showSiteRuntime = function () {
                site_runtime = $("#site_runtime");
                if (!site_runtime) {
                    return;
                }
                window.setTimeout("showSiteRuntime()", 1000);
                start = new Date("<%= theme.lovebegin %>");
                now = new Date();
                T = (now.getTime() - start.getTime());
                i = 24 * 60 * 60 * 1000;
                d = T / i;
                D = Math.floor(d);
                h = (d - D) * 24;
                H = Math.floor(h);
                m = (h - H) * 60;
                M = Math.floor(m);
                s = (m - M) * 60;
                S = Math.floor(s);
                site_runtime.html("<span class=\"bigfontNum\">" + (D < 10 ? '0' + D : D) + "</span> <span class=\"small-text\">天</span> <span class=\"bigfontNum\">" + (H < 10 ? '0' + H : H) + "</span> <span class=\"small-text\">小时</span> <span class=\"bigfontNum\">" + (M < 10 ? '0' + M : M) + "</span> <span class=\"small-text\">分钟</span> <span class=\"bigfontNum\">" + (S < 10 ? '0' + S : S) + "</span> <span class=\"small-text\">秒</span>");
            };
            showSiteRuntime();

            function isElementInViewport(el) {
                var rect = el.getBoundingClientRect();
                return (
                    rect.top >= 0 &&
                    rect.left >= 0 &&
                    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                );
            }

            function showFlipInElements() {
                $('.flip-in').each(function() {
                    var $item = $(this);
                    if (isElementInViewport($item[0])) {
                        $item.addClass('show');
                    }
                });
            }

            function showFadeInUpElements() {
                $('.fade-in-up').each(function(i) {
                    var $item = $(this);
                    setTimeout(function() {
                        $item.addClass('show');
                    }, i * 100); // 减少延迟时间
                });
            }

            $(document).ready(function() {
                showFlipInElements();
                showFadeInUpElements();
                $(window).on('scroll', function() {
                    showFlipInElements();
                    showFadeInUpElements();
                });
            });

            $(document).on('pjax:end', function() {
                showFlipInElements();
                showFadeInUpElements();
            });
        </script>
